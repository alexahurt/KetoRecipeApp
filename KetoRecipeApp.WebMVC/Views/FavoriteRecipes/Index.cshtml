@model IEnumerable<KetoRecipeApp.Models.FavoriteRecipesListItem>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center mt-4">Favorite Recipes</h2>

<table class="table table-dark table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FavoriteRecipesId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RecipeTitle)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FavoriteRecipesId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeTitle)
            </td>
            <td class="text-right">
                @Html.ActionLink("Delete", "Delete", new { id = item.FavoriteRecipesId }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }


</table>

<p class="text-center">
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-outline-light" })
</p>
